

<div class='container'>
   <div class="row justify-content-center">
  <div class="col-sm-12 my-3">
    <%= form_with url: boats_path, method: :get, class: "d-flex p-5" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a new location"
        %>
      <%= submit_tag "Search", address: "", class: "btn btn-primary" %>
    <% end %>
<h2 style='color: white'>All Boats </h2>
  <div class='row'>
    <% @boats.each do |boat| %>
      <%= link_to boat, class: 'w-25 col-3 mb-5' do %>
        <div class="col card_boat">
          <div class="card-body d-flex flex-column p-0">
            <div class="card-img-top">
            <%= cl_image_tag boat.photo.key, height: 300, width: 280, crop: :fill %>
            </div>
            <div class="card-text ps-3">
              <div class='d-flex gap-5 mt-1'>
                <p><%= boat.name %></p>
                <p><%= boat.category %></p>
              </div>
              <div class='d-flex justify-content-between pe-3 mt-4'>
                <p><%= boat.capacity %> <i class="fa-solid fa-people-group" style="color: #008000;"></i></p>
                <p><%= boat.price %> <i class="fa-solid fa-euro-sign" style="color: #008000;"></i></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>


<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
  </div>
</div>
