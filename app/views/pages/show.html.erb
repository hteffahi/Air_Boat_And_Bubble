<div>
  <h3>Boats :</h3>
  <ul>
    <% @boats.each do |boat| %>
      <li>
        <%= boat.name %>
        <%= link_to "Delete",
          boat_path(boat),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new boat', new_boat_path %> <br><br><br>
</div>
<div>
  <h3>Pending booking</h3>
  <div class='d-flex gap-5'>
    <% @bookings.each do |booking| %>
        <div class='card', style='width: 18rem;'>
          <p>Customer : <%= booking.user.first_name %></p>
          <p>Boat : <%= booking.boat.name %></p>
          <div>
            <p>From : <%= booking.start_date %></p>
            <p>To : <%= booking.end_date %></p>
          </div>
          <p>Status: <%= booking.status %> <%= 'En attente' if booking.status = nil %></p>
          <%= link_to 'Accept', boat_booking_url(booking.boat.id, booking.id), data: { turbo_confirm: 'Are you sure you want to accept this booking?', "turbo-method": :patch } %>
          <%= link_to 'Decline', boat_update_false_booking_url(booking.boat.id, booking.id), data: { turbo_confirm: 'Are you sure you want to decline this booking?', "turbo-method": :patch } %>
        </div>
    <% end %>
  </div>
</div>
