<div class='container'>

    <div class="header">
        <h1 class="title mt-3" style='color: white'>Welcome to the Air Boat & Bubble</h1>
        <h3 class="subtitle" style='color: white'>Our Best Boats</h3>
    </div>

    <div class="search-form row justify-content-center">
      <div class="col-sm-8 my-3">
        <%= form_with url: boats_path, method: :get, class: "d-flex p-5" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a Location"
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <div class='boat-list row'>
      <% @boats.sample(4).each do |boat| %>
        <%= link_to boat, class: 'w-25 col-3 mb-5 boat-card' do %>
          <div class="card">
            <div class="card-body d-flex flex-column p-0">
              <div class="card-image">
                <%= cl_image_tag boat.photo.key, height: 150, width: 200, crop: :fill %>
              </div>
              <div class='boat-info ps-3'>
                <div class='boat-name-category'>
                  <p><%= boat.name %></p>
                  <p><%= boat.category %></p>
                </div>
                <div class='boat-stats'>
                  <p><%= boat.capacity %> <i class="fa-solid fa-people-group" style="color: #008000;"></i></p>
                  <p><%= boat.price %> <i class="fa-solid fa-euro-sign" style="color: #008000;"></i></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

</div>

  <footer class="footer">
    <div class="footer-links">
      <a href="#" aria-label="GitHub"><i class="fab fa-github"></i></a>
      <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
      <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
      <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      <!-- Copyright information goes here -->
    </div>
  </footer>
